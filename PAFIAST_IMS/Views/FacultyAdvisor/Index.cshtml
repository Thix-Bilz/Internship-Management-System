@model IEnumerable<FacultyAdvisor>
@{
    ViewData["Title"] = "Faculty Advisor";
}
<br /><br /><br /><br />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Faculty Advisor List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Supervisor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Faculty Advisor
            </a>
        </div>
    </div>
    

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Faculty Advisor Name:
            </th>
            <th>
                Faculty Advisor Department
            </th>
            <th>
                Designation:
            </th>
            <th>
                Contact No:
            </th>
            <th>
                Email Address:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.FacultyAdvisorName
               </td>
               <td>
                   @obj.FacultyAdvisorDept
               </td>
               <td>
                   @obj.FacultyAdvisorDesignation
               </td>
               <td>
                   @obj.FacultyAdvisorContactNo
               </td>
               <td>
                   @obj.FacultyAdvisorEmail
               </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="FacultyAdvisor" asp-action="Edit" asp-route-id="@obj.FAId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                       <a asp-controller="FacultyAdvisor" asp-action="Delete" asp-route-id="@obj.FAId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div>