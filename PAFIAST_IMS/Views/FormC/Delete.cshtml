@model FormC
@{
    ViewData["Title"] = "FormC";
}
<br /><br /><br /><br />
<section class="section center-section">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-5"><img src="/assets/img/HosteliteData.png" width="750" height="750"></div>
            <div class="col-lg-6">
<form method="post" asp-action="DeletePOST">
    <input asp-for="FormCId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete FormC</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="I_Semester">Internship Semester</label>
            <input asp-for="I_Semester" class="form-control"/>
            <span asp-validation-for="I_Semester" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IE_Name">Employer Name</label>
            <input asp-for="IE_Name" class="form-control"/>
            <span asp-validation-for="IE_Name" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="I_Dept">Internship Department</label>
            <input asp-for="I_Dept" class="form-control"/>
            <span asp-validation-for="I_Dept" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Joining_Date">Joining Date</label>
            <input id="startdatetimepicker" asp-for="Joining_Date" class="form-control"/>
            <span asp-validation-for="Joining_Date" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="End_Date">Ending Date </label>
            <input id="enddatetimepicker" asp-for="End_Date" class="form-control"/>
            <span asp-validation-for="End_Date" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="FormC" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form></div></div></section>
<br /><br /><br /><br />
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
