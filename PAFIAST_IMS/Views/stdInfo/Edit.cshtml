@model stdInfo
@{
    ViewData["Title"] = "Student info ";
}
<br /><br /><br /><br />
<section class="section center-section">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-5"><img src="/assets/img/HosteliteData.png" width="750" height="750"></div>
            <div class="col-lg-6">
<form method="post" asp-action="Edit">
    <br /><br /><br /><br />

    <div class="border p-3 mt-4 w-75">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Student Info</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="stdName">Full Name</label>
            <input asp-for="stdName" class="form-control"/>
            <span asp-validation-for="stdName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="stdFatherName">Father Name</label>
            <input asp-for="stdFatherName" class="form-control"/>
            <span asp-validation-for="stdFatherName" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="stdReg_no">Registration Number</label>
            <input asp-for="stdReg_no" class="form-control"/>
            <span asp-validation-for="stdReg_no" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="stdDept">Department</label>
            <input asp-for="stdDept" class="form-control"/>
            <span asp-validation-for="stdDept" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="stdCNIC">CNIC</label>
            <input asp-for="stdCNIC" class="form-control"/>
            <span asp-validation-for="stdCNIC" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="stdContact_no">Contact Number</label>
            <input asp-for="stdContact_no" class="form-control"/>
            <span asp-validation-for="stdContact_no" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="stdAddress">Address</label>
            <input asp-for="stdAddress" class="form-control"/>
            <span asp-validation-for="stdAddress" class="text-danger"></span>
        </div>
        @*<div class="mb-3">
              <label class="form-label">Email</label>
              <select asp-for="@Model.User.Email" class="form-control" asp-items="@selectListItems">
        </select>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.User.PhoneNumber"></label>
            <input asp-for="@Model.User.PhoneNumber" class="form-control"/>
            <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
        </div>*@
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="stdInfo" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Student Information
        </a>
    </div>
</form>
</div></div></section>
<br /><br /><br /><br />
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
