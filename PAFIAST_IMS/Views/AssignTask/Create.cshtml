@model AssignTask
@{
    ViewData["Title"] = "Assign Tasks ";
}
<br /><br /><br /><br />
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Assign Tasks</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Tasks"></label>
            <input asp-for="Tasks" class="form-control"/>
            <span asp-validation-for="Tasks" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Evaluation"></label>
            <select asp-for="Evaluation" class="form-control">
                <option value="High Performance">High Performance</option>
                <option value="Average">Average</option>
                <option value="Inadequate">Inadequate</option>
            </select>
            <span asp-validation-for="Evaluation" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="AssignTask" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>
<br /><br /><br /><br />

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
