@model IEnumerable<AssignTask>
@{
    ViewData["Title"] = "Assign Tasks ";
}

<br /><br /><br /><br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Assigned Tasks List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AssignTask" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Tasks
            </a>
        </div>
    </div>
    

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Tasks
            </th>
            <th>
                Evaluation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.Tasks
               </td>
               <td>
                   @obj.Evaluation
               </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="AssignTask" asp-action="Edit" asp-route-id="@obj.ATId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                       <a asp-controller="AssignTask" asp-action="Delete" asp-route-id="@obj.ATId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div><br /><br /><br /><br />