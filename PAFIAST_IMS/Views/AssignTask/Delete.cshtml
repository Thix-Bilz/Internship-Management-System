@model AssignTask
@{
    ViewData["Title"] = "Assign Tasks ";
}
<br /><br /><br /><br />
<form method="post" asp-action="DeletePOST">
    <input asp-for="ATId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Assign Tasks</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Tasks"></label>
            <input asp-for="Tasks" class="form-control"/>
            <span asp-validation-for="Tasks" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Evaluation"></label>
            <input asp-for="Evaluation" class="form-control"/>
            <span asp-validation-for="Evaluation" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="AssignTask" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
