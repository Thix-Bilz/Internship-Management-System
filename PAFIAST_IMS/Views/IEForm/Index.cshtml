@model IEnumerable<IEForm>
@{
    ViewData["Title"] = "Index";
}

<br /><br /><br /><br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">IEForm List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="IEForm" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New IEForm
            </a>
        </div>
    </div>
    

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Has student maintained his diary/notes every day
            </th>
            <th>
                Attendance of the student
            </th>
            <th>
                Professional attitude of the student
            </th>
            <th>
                Performance as an individual and teamwork
            </th>
            <th>
                Internship report and presentation submitted to industry supervisor
            </th>
            <th>
                Comment
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.P2
               </td>
               <td>
                   @obj.P3
               </td>
               <td>
                   @obj.P4
               </td>
               <td>
                   @obj.P5
               </td>
               <td>
                   @obj.P6
               </td>
               <td>
                   @obj.Comment
               </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="IEForm" asp-action="Edit" asp-route-id="@obj.IEFId"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                       <a asp-controller="IEForm" asp-action="Delete" asp-route-id="@obj.IEFId"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div><br /><br /><br /><br />