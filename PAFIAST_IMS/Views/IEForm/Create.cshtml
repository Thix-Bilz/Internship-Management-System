@model IEForm
@{
    ViewData["Title"] = "Index";
}

<br /><br /><br /><br />
<form method="post">
    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create IEForm</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="P2"></label>
            @*<input asp-for="P2" class="form-control"/>*@
            <select asp-for="P2" class="form-control">
                <option value="Yes">Yes</option><option value="No">No</option><option value="Not Relevant">Not Relevant</option>
            </select>
            <span asp-validation-for="P2" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="P3"></label>
            <select asp-for="P3" class="form-control">
                <option value="75%">75%</option>
                <option value="90%">90%</option>
                <option value="100%">100%</option>
            </select>
            <span asp-validation-for="P3" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P4"></label>
            <select asp-for="P4" class="form-control">
                <option value="Poor">Poor</option>
                <option value="Good">Good</option>
                <option value="Excellent">Excellent</option>
            </select>
            <span asp-validation-for="P4" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P5"></label>
            <select asp-for="P5" class="form-control">
                <option value="Poor">Poor</option>
                <option value="Good">Good</option>
                <option value="Excellent">Excellent</option>
            </select>
            <span asp-validation-for="P5" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="P6"></label>
            <select asp-for="P6" class="form-control">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
            <span asp-validation-for="P6" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control"/>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="IEForm" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form><br /><br /><br /><br />

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
