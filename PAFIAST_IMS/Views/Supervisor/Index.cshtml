@model IEnumerable<Supervisor>
@{
    ViewData["Title"] = "Supervisor";
}

<br /><br /><br /><br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Supervisor List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Supervisor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Supervisor
            </a>
        </div>
    </div>
    

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Supervisor Name:
            </th>
            <th>
                Organization/Industry Name and City
            </th>
            <th>
                Designation:
            </th>
            <th>
                Contact No:
            </th>
            <th>
                Email Address:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
       {
           <tr>
               <td>
                   @obj.SupervisorName
               </td>
               <td>
                   @obj.SupervisorIN
               </td>
               <td>
                   @obj.SupervisorDesignation
               </td>
               <td>
                   @obj.SupervisorContactNo
               </td>
               <td>
                   @obj.SupervisorEmail
               </td>
               <td>
                   <div class="w-75 btn-group" role="group">
                       <a asp-controller="Supervisor" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                       <a asp-controller="Supervisor" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                   </div>
               </td>
           </tr>
       }
    </tbody>
</table>
</div>
<br /><br /><br /><br />